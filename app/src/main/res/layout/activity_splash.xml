<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#aabbbbbb"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/faf_ic_launcher_foreground"/>

    <TextView android:id="@+id/autofill_inject_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="32dp"
              android:textColor="#ff4c4c4c"
              android:textSize="24sp"
              android:textStyle="bold"
              tools:text="@string/autofill_service_injected"/>

    <TextView android:id="@+id/autofill_registration_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="18dp"
              android:textColor="#ff4c4c4c"
              android:textSize="16sp"
              android:textStyle="bold"
              tools:text="@string/autofill_service_selected"/>

</LinearLayout>