<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eakurnikov.autoque">

    <uses-permission android:name="android.permission.INTERNET" />

    <dist:module dist:instant="true" />

    <application
        android:name="com.eakurnikov.autoque.domain.app.AutoQueApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Transparent" />

        <activity
            android:name=".ui.auth.AuthActivity"
            android:label="@string/authentication"
            android:launchMode="singleTask"
            android:taskAffinity=".AuthActivity"
            android:theme="@style/Transparent" />

        <activity
            android:name=".ui.autofill.AutofillDisclaimerActivity"
            android:launchMode="singleTask"
            android:taskAffinity=".AutofillDisclaimerActivity"
            android:theme="@style/Transparent" />

        <activity
            android:name=".ui.autofill.AutofillUpdatePromptActivity"
            android:launchMode="singleTask"
            android:taskAffinity=".AutofillUpdatePromptActivity"
            android:theme="@style/Transparent" />

        <activity
            android:name=".ui.credentials.CredentialsActivity"
            android:theme="@style/AppTheme.Launcher">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>