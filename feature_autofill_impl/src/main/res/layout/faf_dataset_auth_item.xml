<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingStart="16dp"
              android:paddingLeft="16dp"
              android:paddingTop="12dp"
              android:paddingEnd="16dp"
              android:paddingRight="16dp"
              android:background="@color/primary"
              android:paddingBottom="12dp">

    <ImageView android:id="@+id/faf_dataset_auth_icon"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginEnd="12dp"
               android:layout_marginRight="12dp"
               android:src="@drawable/ic_autoque"/>

    <TextView android:id="@+id/faf_dataset_auth_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_lightest_gray"
              android:textSize="15sp"
              android:textStyle="bold"
              android:text="@string/faf_dataset_title_auth"/>

</LinearLayout>